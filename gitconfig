[github]
    user = spagalloco
[core]
    excludesfile = ~/.gitignore
    autocrlf = input
[user]
    name = Steve Agalloco
    email = steve.agalloco@gmail.com
[alias]
    st = status
    ci = commit
    co = checkout
    br = branch
    # via http://ozmm.org/posts/git_msg.html
    msg = commit --allow-empty -m
    # via http://andyjeffries.co.uk/articles/25-tips-for-intermediate-git-users
    lol = log --pretty=oneline --abbrev-commit --graph --decorate

    pul = pull
    comit = commit
[color]
    branch = auto
    diff = auto
    status = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[apply]
    whitespace = nowarn
[branch]
    autosetuprebase = always
[push]
    default = tracking
